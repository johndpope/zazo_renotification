- if defined? title
  .row
    .col-sm-6
      h2.col-sm-offset-3.form-action-title= title

= simple_form_for @program, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  .row = f.input :name,  wrapper_html: { class: 'col-sm-6' }
  .row
    .col-sm-6
      .col-sm-offset-3
        = f.submit class: 'btn btn-sm btn-primary'
        '&nbsp;
        = link_to 'Back', programs_path, class: 'btn btn-sm btn-default'
